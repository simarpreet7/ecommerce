<body>

  <%- include("../partials/nav.ejs") %>
  <section class="section promotion" >
    <div class="history-page">
      <h1 class="history-page__title">Order History</h1>
      <hr />


<!-- ////////////TABS///////////////// -->
<div class="body-tab">
  <div class="tabby">
    <div class="tabs">
      <button class="tab is-selected" data-theme="placed">
        Order Placed
      </button>
      <button class="tab" data-theme="delivered">
        Delivered
      </button>
      <button class="tab" data-theme="cancelled">
        Cancelled Orders
      </button>
      <button class="tab " data-theme="returned">
        Returned
      </button>
    </div>
  
    <div class="tab-contents">
      
      <section class="tab-content is-selected" data-theme="placed">
        <div>
          <!-- Placed -->
            <div class="product">
            <section class="section products sp" >
              <div class="product-layout container">
                <%if(orders.length > 0){%>
                  <%orders.forEach(function(order){%>
                    <%if(order.status != "Delivered" && order.status != "Cancelled" && order.status != "Returned"){%>
                <div class="col-3-of-4">
                  <div class="product-layout">
                      <section class="root">
                        <figure>
                          <img src="../../public/img/logo.png" alt="logo">
                          <figcaption>
                            <h4>Quantity <%= order.items.length%></h4>
                            <h2>₹ <%=order.totalPrice%></h2>
                          </figcaption>
                        </figure>
                        <div class="order-track">
                          <div class="order-track-step">
                            <div class="order-track-status">
                              <span class="order-track-status-dot"></span>
                              <span class="order-track-status-line"></span>
                            </div>
                            <div class="order-track-text">
                              <p class="order-track-text-stat"><%=order.status%></p>
                              <span class="order-track-text-sub"><%=order.orderDate%></span>
                            </div>
                          </div> 
                          <div class="order-track-step">
                            <div class="order-track-status">
                              <span class="order-track-status-dot"></span>
                              <span class="order-track-status-line"></span>
                            </div>
                            <div class="order-track-text">
                              <p class="order-track-text-stat">Delivery</p>
                              <span class="order-track-text-sub"><%=order.deliveryDate%></span>
                            </div>
                          </div>
                        </div> 
                            <hr class="separate2">
                        <div class=" RowBox">
                          <div class="col">
                              <p class="text-muted"><span class="idd">Order ID :</span>  <span class="dark"><%=order._id%></span></p>
                              <p class="text-muted"><span class="idd">Place On :</span> <span class="dark"><%=order.orderDate%></span> </p>
                          </div>
                      </div>
                      <div class="div-btn">
                      <a href="/order/viewdetails/<%=order._id%>" class="OH-btnn" >View Details</a>
                      <a href="/order/cancel/<%=order._id%>" class="OH-btnn" >Cancel</a>
                    </div>
                    
                      </section>
                    </div>
                  </div>
                      <%}})%>
                      <%}else{%>
                        <div class="not-display">
                            <h1 >No orders placed.</h1>
                        </div>
                      <%}%>
              </div>
            </section>
          </div>
        </div>
      </section>
    
      <section class="tab-content" data-theme="delivered">
        <div>
          <!-- Delivered -->
            <div class="product">
            <section class="section products sp" >
              <div class="product-layout container">
