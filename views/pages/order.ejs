                  <%orders.forEach(function(order){%>
                  <%if(order.status == "Delivered"){%>
                <div class="col-3-of-4">
                  <div class="product-layout">
                      <section class="root">
                        <figure>
                          <img src="../../public/img/logo.png" alt="logo">
