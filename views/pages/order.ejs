                            <h4>Quantity <%= order.items.length%></h4>
                            <h2>₹ <%=order.totalPrice%></h2>
                          </figcaption>
                        </figure>
                        <div class="order-track">
                          <div class="order-track-step">
                            <div class="order-track-status">
                              <span class="order-track-status-dot"></span>
                              <span class="order-track-status-line"></span>
                            </div>
                            <div class="order-track-text">
                              <p class="order-track-text-stat">Order Received</p>
                              <span class="order-track-text-sub"><%=order.orderDate%></span>
                            </div>
                          </div> 
                          <div class="order-track-step">
                            <div class="order-track-status">
                              <span class="order-track-status-dot"></span>
                              <span class="order-track-status-line"></span>
                            </div>
                            <div class="order-track-text">
                              <p class="order-track-text-stat"><%=order.status%></p>
                              <span class="order-track-text-sub"><%=order.deliveryDate%></span>
                            </div>
                          </div>
                        </div> 
                            <hr class="separate2">
                        <div class=" RowBox">
                          <div class="col">
                              <p class="text-muted"><span class="idd">Order ID :</span>  <span class="dark"><%=order._id%></span></p>
                              <p class="text-muted"><span class="idd">Place On :</span> <span class="dark"><%=order.orderDate%></span> </p>
                              <p class="text-muted"><span class="idd">Return Upto :</span> <span class="dark"><%=order.returnDate%></span> </p>
                          </div>
                      </div>
                      <div class="div-btn div-btn-delivered">
                      <a href="/order/viewdetails/<%=order._id%>" class="OH-btnn" >View Details</a>
                      <a href="/order/buyagain/<%=order._id%>" class="OH-btnn" >Buy Again</a>
                      <a href="/order/return/<%=order._id%>" class="OH-btnn" >Return Order</a>
                    </div>
                    
                      </section>
                    </div>
                  </div>
                      <%}})%>
                      <%}else{%>
                        <div class="not-display">
                            <h1 >No orders Delivered.</h1>
                        </div>
                      <%}%>
              </div>

            </section>
            
          </div>
        </div>
      </section>
    
