<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/3bb9d2c9bc.js" crossorigin="anonymous"></script>

  <!-- Glidejs -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/css/glide.core.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/css/glide.theme.css" />

  <!-- Custom Stylesheet -->
  <link rel="stylesheet" href="../../public/css/category.css" />

</head>

<body>
  <header id="header" class="header">

    <!-- Navigation -->
    <!-- my code -->
    <%- include("../partials/nav.ejs") %>
    <!-- my CODE -->
    

    <!-- Hero -->
    <div class="hero">
      <div class="hero__content container">
        <h1>
          <span>Get <span class="color">50%</span> off your first shopping
            with</span>
          <span><span class="color">ShopVille</span> online shop</span>
        </h1>
        <a href="#" class="btn btn-hero">shop now</a>
      </div>

      <a href="#new__arrival" class="goto__next scroll-link">
        <span>
          <svg>
            <use xlink:href="../../public/img/sprite.svg#icon-angle-down"></use>
          </svg>
        </span>
      </a>
    </div>
  </header>

  <!-- Main -->
  <main>
    <!-- New Arrival -->
    <section class="section new__arrival" id="new__arrival">
      <div class="arrivals container">
        <div class="title">
          <h1 class="primary__title">New Arrival</h1>
        </div>
        <div class="arrival__center">
          <%data.forEach(function(product){%>
          <div class="product">
            <div class="img__container">
              <img class="img--size" src="<%=product.imageURL%>" alt="" />
            </div>
            <div class="product__bottom">
              <div class="rating">
                <span>
                  <svg>
                    <use xlink:href="../../public/img/sprite.svg#icon-star-full"></use>
                  </svg>
                </span>
                <span>
                  <svg>
                    <use xlink:href="../../public/img/sprite.svg#icon-star-full"></use>
                  </svg>
                </span>
                <span>
                  <svg>
                    <use xlink:href="../../public/img/sprite.svg#icon-star-full"></use>
                  </svg>
                </span>
                <span>
                  <svg>
                    <use xlink:href="../../public/img/sprite.svg#icon-star-full"></use>
                  </svg>
                </span>
                <span>
                  <svg>
                    <use xlink:href="../../public/img/sprite.svg#icon-star-empty"></use>
                  </svg>
                </span>
              </div>
              <h3><%= product.name %></h3>
              <form method="POST" action="/cart/add/<%= product._id%>">
                <div class="form-group">
                  <input type="hidden" name="product_id" id="quantity" value="<%= product._id %>"></input>
                  <input type="hidden" name="quantity" id="quantity" value="1"></input>
                  <input type="hidden" name="price" id="priceHidden" value="<%= product.price %>"></input>
                  <input type="hidden" name="image" id="image" value="<%= product.imageURL %>"></input>
                  <input type="hidden" name="name" id="name" value="<%= product.name %>"></input>
                </div>
                  <button class="btnn-cart" type="submit">ADD TO CART &nbsp<i class="fas fa-shopping-cart"></i></button>
              </form>
            </div>
          </div>
          <%})%>
        </div>
      </div>
    </section>

          <!-- Arrows -->
          <div class="glide__arrows" data-glide-el="controls">
            <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
              prev
            </button>
            <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
              next
            </button>
          </div>

    <!-- Special Offer Banner -->
    <section class="section special__offer">
      <div class="offer__container">
        <h1>PREMIUM BRANDS</h1>
        <p>Special Offer Discount valid for Only this Week</p>
        <a href="#">SHOP NOW</a>
