        <div class="content-wrapper">
        

         <h1 style="text-align: center;">Inventory</h1>
         <hr style="text-align: center; width: 80%;">
        

         <div style="margin: 2em 1em;">
            <div class="card mb-3">
              <div class="card-header">
                <i class="fa fa-table"></i> Inventory Table </div>
              <div class="card-body">
                <div class="table-responsive">
          <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Discount</th>
                    <th> </th>
                    
                    
                </tr>
            </thead>
            
            <tbody>
              <% if(products.length > 0){%>
                <% products.forEach(function(product){%>
                <tr>
                    <td><%=product.name%></td>
                    <td><img class="inventory-img" src="<%=product.imageURL%>"></td>
                    <td><%=product.price%></td>
                    <td><%=product.stock%></td>
                    <td><%=product.description%></td>
                    <td><%=product.category%></td>
                    <td><%=product.discount%></td>
                    <td><a href="/seller/products/<%=product._id%>/update" class="btn btn-primary">Update</a>
                        <br> 
                        <form action="/seller/products/<%=product._id%>?_method=DELETE" method="POST">
                          <!-- <a  data-toggle="modal" data-target="#exampleModaldelete"> -->
                          <button class="btn btn-danger mt-2">Delete</button></a>
                      </form>
                </tr>
                <% }) %>
              <%}else{%>
                  <tr>
                    No Products
                  </tr>
              <%}%>
            </tbody>
            
