<%- include("../partials/header.ejs") %>
<link rel="stylesheet" href="../../public/css/login.css" type="text/css">
<body>
<div class="box">
  <nav class="navbar navbar-expand-sm navbar-primary bg-white">
    <a class="d-inline-flex" href="/home"><img class="logo" src="../../public/img/logo.png" alt="logo"></a>
  </nav>
    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
      <div class="container">
        <div class="card login-card">
          <div class="row no-gutters">
            <div class="  clr-bg col-md-5 " >
                
              <img class="img-fluid img-css" src="https://drive.google.com/uc?id=10MlsqMLkrE1FMddZm2Ei5c1ar5knY2h6" alt="login" class="login-card-img">
            </div>
            
          
            <div class="col-md-7">
              <div class="card-body">
                <div class="d-flex align-items-start justify-content-end brand-wrapper">
                  <a class="btn-css float-right btn btn-primary btn-block text-white" href="/auth/signup">Sign Up</a>
                </div>
                <p class="login-card-description">Ready to Log in </p>
                <form method="POST" action="/auth/login">
                    <div class="form-group">
                      <label class="sr-only">Username</label>
                      <input type="text" name="username"  class="form-control rounded-pill" placeholder="Username">
                    </div>
                    <div class="form-group mb-4">
                      <label for="password" class="sr-only">Password</label>
                      <input type="password" name="password" class="form-control rounded-pill" placeholder="Password">


                    </div>
                    <button type="submit" class=" btn-shadow btn  btn-block rounded-pill login-btn mb-4" > Log in </button>
                  </form>
                  <a href="#!" class="forgot-password-link">Forgot password?</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer style="text-align: center;">
      <div>Contributor : Simarpreet , Arnav , Naveen</div>
      <div>Copyright &copy; 2021 glasscodeclub</div>
    </footer>


    
    <%- include("../partials/footer.ejs") %>
  </div>
  </body>

